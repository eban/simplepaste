<html>
  <head>
    <title> <%= params['page_id'] %> - FileSimplePaste view </title>

    <style type='text/css'>
      <!--
	pre#paste_body{
	  border: 1px solid gray;
	  padding: 0.5em;
	}
      -->
    </style>
  </head>

  <body>

    <%= params['header'] %>
    <%= params['body'] %>

    <ul>
      <li>Your paste URL is <a href='<%= params['v_url'] %>'><%= params['v_url'] %> </a></li>
      <li>Paste user: <%= params['name'] %> </li>
      <li>Paste time: <%= params['time'] %> </li>
      <li>Comment: <%= params['comment'] %> </li>
      <li>Paste IP addr: <%= params['ipaddr'] %> </li>

      <li><a href='<%= "#{script_url}/make" %>'>make new page</a></li>
      <% unless params['stick'] %>
        <li><a href='<%= "#{script_url}/commit/delete/#{params['page_id']}" %>'>
	  delete this page</a></li>
	<li><a href='<%= "#{script_url}/commit/stick/#{params['page_id']}" %>'>
	  stick this page</a></li>
      <% end %>
    </ul>

    <%= params['footer'] %>
  </body>
</html>

